
{{> message}}
<!-- search bar -->
<div class="container mt-5">
  <div class="row search-bar-inner">
    <div class="col-md-10 col-12 mx-auto">
      <form action="/searchSort" class="d-flex flex-row justify-content-between ">
        <div class="w-25 d-flex flex-row">
          <input type="text" name="keywords" id="search-input" class="form-control search-input" placeholder="輸入餐廳、分類"
            aria-label="Restaurant Name..." value="{{keywords}}" aria-describedby="search-button">
          <div class="input-group-append px-1">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- dropdown -->
<div>
  <input type="checkbox" class="drop-down-checkbox" id="drop-down-checkbox">
  <div class="drop-down">
    <label for="drop-down-checkbox">
      <i class="fa-solid fa-filter fa-lg drop-down-filter"></i>
    </label>
    <ul id="dropdownSort" class="drop-down-list">
      <li class="drop-down-item ">
        <button class="drop-down-button drop-top" type="submit" name="word" value="_id,asc">default</button>
      </li>
      <li class="drop-down-item ">
        <button class="drop-down-button" type="submit" name="word" value="name,asc" value="">A-Z</button>
      </li>
      <li class="drop-down-item">
        <button class="drop-down-button" type="submit" name="word" value="name,desc">Z-A</button>
      </li>
      <li class="drop-down-item ">
        <button class="drop-down-button" type="submit" name="word" value="category,asc">category</button>
      </li>
      <li class="drop-down-item">
        <button class="drop-down-button" name="word" value="location,asc" type="submit">location</button>
      </li>
      <li class="drop-down-item cancel-border">
        <button class="drop-down-button drop-bottom" name="word" value="rating,desc" type="submit">rating</button>
      </li>
    </ul>
  </div>
</div>



<!-- restaurant list -->
<div class="container mt-3">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">
        {{#each rests}}
        <div class="col">
          <a href="/rests/{{this._id}}" class="text-secondary">
            <div class="card mb-3">
              <img class="card-img-top" src={{this.image}} alt="{{this.name}}">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>

                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{this.category}}
                </div>

                <span class="badge-pill badge-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
              </div>
            </div>
          </a>
          <div class="mb-2 d-flex justify-content-end">
            <form class="me-2" action="/rests/{{this._id}}/edit" style="display: inline" ;>
              <button type="submit" class="btn btn-outline-success">編輯</button>
            </form>
            <form class="me-2" action="/rests/{{this._id}}" style="display: inline" ;>
              <button type="submit" class="btn btn-outline-info">詳細資料</button>
            </form>
            <form action="/rests/{{this._id}}?_method=DELETE" style="display: inline" ; method="POST">
              <button type="submit" class="btn btn-outline-danger">刪除</button>
            </form>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<script src="/javascripts/indexNoresult.js"></script>