<h1 class="mb-1 restaurant-show-title">{{rest.name}}</h1>
<div class="container" style="height: 750px;">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{rest.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{rest.location}}
        <a href="https://goo.gl/maps/V9mKwVJ4s5v" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{rest.phone}}
      </p>

      <p class="mb-3">
        {{rest.description}}
      </p>
      <form class="me-2" action="/rests/{{rest._id}}/edit" style="display: inline" ;>
        <button type="submit" class="btn btn-outline-success">編輯</button>
      </form>
      <form action="/rests/{{rest._id}}/delete" style="display: inline" ; method="POST">
        <button type="submit" class="btn btn-outline-danger">刪除</button>
      </form>
      <img class="rounded mx-auto d-block mb-4 w-100" src="{{rest.image}}" alt="{{rest.name}}"
        style="max-width: 600px;">
    </div>
    <form class="d-flex justify-content-center" action="/">
      <button type="submit" class="btn btn-outline-info">回首頁</button>
    </form>
  </div>
</div>